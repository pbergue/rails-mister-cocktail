<div class="container">
<h1>All cocktails</h1>
<%= link_to "Add a new cocktail", new_cocktail_path %>
  <% @cocktails.each do |cocktail| %>
    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1901&q=80)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    </div>
  <% end %>
</div>
